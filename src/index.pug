          form(action="").project-form#project-form
            div.group__project-name
              input(type='text' placeholder='Name your project...' required).project-form__name
            div.group__project-description
              input(type='text' placeholder='Description...' required).project-form__description
            div.group__project-buttons
              button.button.button__project-form.button--save Save
              button.button.button__project-form.button--cancel Cancel
        button.button#addproject-button Add Project
    main.main#main
      section.main__container
        div
          h1.main__title Project X
          h2.main__subtitle Here goes the project description
        button.button.button--edit Edit
      ul.projects-list#projects-list
        li.projects-list__item
          div.projects-list__priority.priority1
          span.projects-list__checkbox
          span.projects-list__name Proyecto 1
          //- span.projects-list__description Esta es la descripci贸n del proyecto 1
          span.projects-list__time 12-1-2020
          i.fas.fa-trash
        li.projects-list__item
